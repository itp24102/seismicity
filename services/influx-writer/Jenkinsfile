pipeline {
  agent {
    kubernetes {
      yamlFile 'jenkins/k8s-agent.yaml'
      defaultContainer 'python'
    }
  }

  environment {
    AWS_REGION = 'eu-west-1'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Prepare') {
      steps {
        dir('services/influx-writer') {
          sh '''
            rm -rf build influx_writer.zip
            mkdir -p build
            pip install -r requirements.txt -t build/
            cp src/influx_writer.py build/
          '''
        }
      }
    }

    stage('Package') {
      steps {
        dir('services/influx-writer/build') {
          sh 'zip -r ../influx_writer.zip .'
        }
      }
    }

    // Προαιρετικά:
    // Μπορούμε να προσθέσουμε Upload σε S3 αν θέλεις
  }

  post {
    failure {
      echo '❌ Κάποιο στάδιο απέτυχε.'
    }
  }
}
