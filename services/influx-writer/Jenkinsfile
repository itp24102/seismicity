pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
    - name: python
      image: python:3.9-slim
      command:
        - cat
      tty: true
"""
      defaultContainer 'python'
    }
  }

  environment {
    AWS_REGION = 'eu-west-1'
    FUNCTION_NAME = 'influx-writer'
    S3_BUCKET = 'seismicity-app-bucket'
  }

  stages {
    stage('Build ZIP') {
      steps {
        dir('services/influx-writer') {
          sh '''
            pip install --upgrade pip
            pip install --target build/ -r requirements.txt
            cp src/influx_writer.py build/
            cd build
            apt-get update && apt-get install -y zip
            zip -r ../influx_writer.zip .
          '''
        }
      }
    }

    stage('Upload to S3') {
      steps {
        dir('services/influx-writer') {
          withCredentials([[
            $class: 'AmazonWebServicesCredentialsBinding',
            credentialsId: 'aws-credentials'
          ]]) {
            sh 'apt-get update && apt-get install -y awscli'
            sh 'aws s3 cp influx_writer.zip s3://$S3_BUCKET/influx_writer.zip --region $AWS_REGION'
          }
        }
      }
    }

    stage('Deploy to AWS Lambda') {
      steps {
        withCredentials([[
          $class: 'AmazonWebServicesCredentialsBinding',
          credentialsId: 'aws-credentials'
        ]]) {
          sh 'aws lambda update-function-code --function-name $FUNCTION_NAME --s3-bucket $S3_BUCKET --s3-key influx_writer.zip --region $AWS_REGION'
        }
      }
    }
  }

  post {
    failure {
      echo "❌ Κάποιο στάδιο απέτυχε."
    }
  }
}
