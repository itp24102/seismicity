pipeline {
  agent {
    kubernetes {
      yamlFile 'jenkins/pod.yaml'
      defaultContainer 'python'
    }
  }

  environment {
    AWS_REGION = 'eu-west-1'
    S3_BUCKET = 'seismicity-app-bucket'
    INFLUX_URL = 'http://seismicity.westeurope.cloudapp.azure.com:8086'
    INFLUX_TOKEN = credentials('influxdb-token')
  }

  stages {
    stage('Install Dependencies') {
      steps {
        container('python') {
          dir('services/influx-writer') {
            sh 'pip install --target build/ -r requirements.txt'
          }
        }
      }
    }

    stage('Copy Source') {
      steps {
        container('python') {
          dir('services/influx-writer') {
            sh 'cp src/influx_writer.py build/influx_writer.py && echo "def handler(event, context): return \\"OK\\"" > build/__init__.py'
          }
        }
      }
    }

    stage('Package') {
      steps {
        container('python') {
          dir('services/influx-writer/build') {
            sh 'apt-get update && apt-get install -y zip && zip -r ../influx_writer.zip .'
          }
        }
      }
    }

    stage('Upload to S3') {
      steps {
        container('awscli') {
          dir('services/influx-writer') {
            withCredentials([[
              $class: 'AmazonWebServicesCredentialsBinding',
              credentialsId: 'aws-credentials'
            ]]) {
              sh '''
                aws s3 cp influx_writer.zip s3://$S3_BUCKET/influx_writer.zip --region $AWS_REGION
              '''
            }
          }
        }
      }
    }

    stage('Apply Infrastructure with OpenTofu') {
      steps {
        container('awscli') {
          dir('infrastructure/opentofu/aws/influx-writer') {
            withCredentials([[
              $class: 'AmazonWebServicesCredentialsBinding',
              credentialsId: 'aws-credentials'
            ]]) {
              sh '''
                apt-get update && apt-get install -y curl unzip
                curl -LO https://github.com/opentofu/opentofu/releases/download/v1.9.1/tofu_1.9.1_linux_amd64.zip
                unzip -q tofu_1.9.1_linux_amd64.zip
                install -o root -g root -m 0755 tofu /usr/local/bin/tofu
                tofu init
                tofu apply -auto-approve \
                  -var=region=$AWS_REGION \
                  -var=influx_url=$INFLUX_URL \
                  -var=influx_token=$INFLUX_TOKEN
              '''
            }
          }
        }
      }
    }
  }

  post {
    failure {
      echo '❌ Κάποιο στάδιο απέτυχε.'
    }
  }
}
