pipeline {
  agent {
    kubernetes {
      yamlFile 'jenkins/k8s-agent.yaml'
      defaultContainer 'python'
    }
  }

  environment {
    FUNCTION_NAME = "influx-writer"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Prepare') {
      steps {
        dir('services/influx-writer') {
          sh '''
            apt-get update && apt-get install -y zip
            rm -rf build influx_writer.zip
            mkdir -p build
            pip install -r requirements.txt -t build/
            cp src/influx_writer.py build/
          '''
        }
      }
    }

    stage('Package') {
      steps {
        dir('services/influx-writer/build') {
          sh 'zip -r ../influx_writer.zip .'
        }
      }
    }

    stage('Post Actions') {
      steps {
        echo 'âœ… Complete'
      }
    }
  }
}
