pipeline {
  agent any

  environment {
    FUNCTION_NAME = "influx-writer"
  }

  stages {
    stage('Build') {
      steps {
        dir('services/influx-writer') {
          sh 'pip install --target build/ -r requirements.txt'
          sh 'cp src/influx_writer.py build/'
        }
      }
    }

    stage('Package') {
      steps {
        dir('services/influx-writer/build') {
          sh 'zip -r ../influx_writer.zip .'
        }
      }
    }

    stage('Deploy to AWS') {
      steps {
        dir('services/influx-writer') {
          withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
            sh 'aws lambda update-function-code --function-name $FUNCTION_NAME --zip-file fileb://influx_writer.zip --region eu-west-1'
          }
        }
      }
    }
  }

  post {
    failure {
      echo '❌ Κάποιο στάδιο απέτυχε.'
    }
  }
}
